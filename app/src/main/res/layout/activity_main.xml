<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrewclam.toyremote.views.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/command_light_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_on" />

        <Button
            android:id="@+id/command_light_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_off" />

        <Button
            android:id="@+id/command_garage_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/garage_open" />

        <Button
            android:id="@+id/command_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/undo" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>